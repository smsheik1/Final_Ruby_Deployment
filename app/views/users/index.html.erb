<!DOCTYPE html>
<html>
<head>
	<title>Login and registration</title>
</head>
<body>
	<h1>Welcome!</h1>
	<div id="registration">
		<h3>Register</h3>
		<form action="/users" method="POST">
			<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
			<label>name</label>
				<input type="name" name="user[name]">
			<label>alias</label>
				<input type="name" name="user[alias]">
			<label>email</label>
				<input type="email" name="user[email]">
			<label>Password</label>
				<input type="password" name="user[password]">
			<div id="help">
				<p>*Password must be at least 8 characters</p>
			</div>
			<label>Confirm PW:</label>
				<input type="password" name="user[confirm_password]">
			<input type="submit" value="Register">
		</form>
	</div>
	<div class="errors">
		<% if flash[:register_errors]%>
			<% flash[:register_errors].each do |error|%>
				<p><%=error%></p>
			<%end%>
		<%end%>
	</div>

	<div id="login">
		<h3>Login</h3>
		<form action="/sessions" method="POST">
		<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
			<label>Email:</label>
				<input type="email" name="login[email]">
			<label>Password</label>
				<input type="Password" name="login[password]">
			<input type="submit" value="login">
		</form>
	</div>
	<div class="errors">
		<% if flash[:login_errors]%>
			<% flash[:login_errors].each do |error|%>
				<p><%=error%></p>
			<%end%>
		<%end%>
	</div>
	<div>
			<%if flash[:shoe_errors] %>
				<%flash[:shoe_errors].each do |message|%>
					<p><%=message%></p>	
				<%end%>
			<%end%>
		</div>
</body>
</html>